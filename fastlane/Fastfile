# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane
opt_out_usage

default_platform(:ios)

DEFAULT_DEVICE = "iPhone 11"

platform :ios do
  desc "Run unit tests"
  before_all do
    setup_circle_ci
  end
  lane :test do
    scan(
      workspace: "Amplify.xcworkspace", 
      scheme: "Amplify", 
      devices: [DEFAULT_DEVICE]
    )
  end
end
